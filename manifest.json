{
  "manifest_version": 3,
  "name": "Vibe",
  "version": "1.0.0",
  "description": "Contextual website recommendations while browsing",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "store-assets/icon16.png",
      "48": "store-assets/icon48.png",
      "128": "store-assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "store-assets/icon16.png",
    "48": "store-assets/icon48.png",
    "128": "store-assets/icon128.png"
  }
} 